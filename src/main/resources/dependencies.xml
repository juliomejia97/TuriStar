<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="inMemoryCityRepository" class="com.webDevelopment.turistar.Administrator.City.Infrastructure.InMemoryCityRepository"/>
    <bean id="inMemoryTicketRepository" class="com.webDevelopment.turistar.Hotel.Ticket.Infrastructure.InMemoryTicketRepository"/>
    <bean id="inMemoryHotelPlanRepository" class="com.webDevelopment.turistar.HotelPlan.Infrastructure.InMemoryHotelPlanRepository"/>
    <bean id="inMemoryHotelPlanBookingRepository" class="com.webDevelopment.turistar.HotelPlanBooking.Infrastructure.InMemoryHotelPlanBookingRepository"/>
    <bean id="hibernateTicketRepository" class="com.webDevelopment.turistar.Hotel.Ticket.Infrastructure.Hibernate.HibernateTicketRepository"/>
    <bean id="geoCodeInfoService" class="com.webDevelopment.turistar.Shared.Intrastructure.Services.GeoCodeInfoService"/>
    <bean id="hibernateProductRepository" class="com.webDevelopment.turistar.Administrator.City.Infrastructure.Hibernate.HibernateCityRepository"/>
    <bean id="cityModifier" class="com.webDevelopment.turistar.Administrator.City.Application.Update.CityModifier">
        <constructor-arg ref="hibernateProductRepository"/>
        <constructor-arg ref="geoCodeInfoService"/>
    </bean>

    <bean id="cityDeleter" class="com.webDevelopment.turistar.Administrator.City.Application.Delete.CityDelete">
        <constructor-arg ref="hibernateProductRepository"/>
    </bean>

    <bean id="citiesAll" class="com.webDevelopment.turistar.Administrator.City.Application.All.CitiesAll">
        <constructor-arg ref="hibernateProductRepository"/>
    </bean>

    <bean id="ticketsAll" class="com.webDevelopment.turistar.Hotel.Ticket.Application.All.TicketsAll">
        <constructor-arg ref="inMemoryTicketRepository"/>
    </bean>

    <bean id="ticketModifier" class="com.webDevelopment.turistar.Hotel.Ticket.Application.Update.TicketModifier">
        <constructor-arg ref="inMemoryTicketRepository"/>
    </bean>

    <bean id="ticketDeleter" class="com.webDevelopment.turistar.Hotel.Ticket.Application.Delete.TicketDelete">
        <constructor-arg ref="inMemoryTicketRepository"/>
    </bean>

    <bean id="hotelPlanAll" class="com.webDevelopment.turistar.HotelPlan.Application.All.HotelPlanAll">
        <constructor-arg ref="inMemoryHotelPlanRepository"/>
    </bean>

    <bean id="hotelPlanModifier" class="com.webDevelopment.turistar.HotelPlan.Application.Update.HotelPlanModifier">
        <constructor-arg ref="inMemoryHotelPlanRepository"/>
    </bean>

    <bean id="hotelPlanDeleter" class="com.webDevelopment.turistar.HotelPlan.Application.Delete.HotelPlanDelete">
        <constructor-arg ref="inMemoryHotelPlanRepository"/>
    </bean>

    <bean id="hotelPlanBookingAll" class="com.webDevelopment.turistar.HotelPlanBooking.Application.All.HotelPlanBookingAll">
        <constructor-arg ref="inMemoryHotelPlanBookingRepository"/>
    </bean>

    <bean id="hotelPlanBookingDeleter" class="com.webDevelopment.turistar.HotelPlanBooking.Application.Delete.HotelPlanBookingDelete">
        <constructor-arg ref="inMemoryHotelPlanBookingRepository"/>
    </bean>

    <bean id="hotelPlanBookingModifier" class="com.webDevelopment.turistar.HotelPlanBooking.Application.Update.HotelPlanBookingModifier">
        <constructor-arg ref="inMemoryHotelPlanBookingRepository"/>
    </bean>
</beans>